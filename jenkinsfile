pipeline {
  agent any
  stages {
    stage('build'){
    steps{
      sh 'python -V'
      sh 'pip install flask --user'
      sh 'python -m pip freeze'
      sh 'which python'
      }
     }
    
    stage('run') {
      steps {
        dir('src'){
        sh 'export PYTHONPATH=/user/bin/python'
        sh 'python server.py'
      }   
    }
  }
}
}
