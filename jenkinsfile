pipeline {
  agent { docker { image 'python:3.6.9' } }
  stages {
    stage('build') {
      steps {
        sh 'virtualenv venv && . venv/bin/activate && pip install -r requirement.txt'
      }
    }
    stage('run') {
      steps {
        dir('src'){
        sh 'export FLASK_APP="server.py"'
        sh 'flask run'
      }   
    }
  }
}
}
