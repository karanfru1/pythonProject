pipeline {
  agent any
  stages {
    stage('build'){
    steps{

      sh 'pip3 install flask -- user'
      sh 'which python'
      }
     }
    
    stage('run') {
      steps {
        dir('src'){
        sh 'export PYTHONPATH=/user/bin/python'
        sh 'python server.py'
      }   
    }
  }
}
}
